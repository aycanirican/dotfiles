  ((kbd "s-p") "prev-in-frame")
  ((kbd "s-v") "vsplit")
  ((kbd "s-h") "hsplit")
  ((kbd "s-c") "delete-window")
  ((kbd "s-C") "kill-window")
  ((kbd "s-r") "iresize")
  ((kbd "s-R") "remove")
  ((kbd "s-+") "balance-frames")
